@model IEnumerable<SimpleCrud.Data.Models.Car>

@{
    ViewData["Title"] = "Car List";
}

<div class="container mt-5">
    <header class="mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a href="@Url.Action("AddCar", "Car")" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle"></i> Add Car
        </a>
    </header>

    <div class="table-responsive">
        @if (Model != null && Model.Any())
        {
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Color</th>
                            <th scope="col">Created</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var car in Model)
                    {
                                <tr>
                                    <td>@car.carName</td>
                                    <td>@car.carType</td>
                                    <td>@car.carBrand</td>
                                    <td>@car.carColor</td>
                                    <td>@car.DateCreated.ToShortDateString()</td>
                                    <td>
                                        <a href="@Url.Action("UpdateCar", "Car", new { id = car.Id })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("DeleteCar", "Car", new { id = car.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this car?');">Delete</a>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
        }
        else
        {
                <div class="alert alert-info text-center" role="alert">
                    No cars found.
                </div>
        }
    </div>
</div>
