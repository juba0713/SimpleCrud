@model SimpleCrud.Data.Models.Car

@{
    ViewData["Title"] = "Update Car";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="UpdateCar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="carName" class="form-label">Car Name</label>
                    <input asp-for="carName" class="form-control" placeholder="Enter car name" />
                    <span asp-validation-for="carName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="carType" class="form-label">Car Type</label>
                    <input asp-for="carType" class="form-control" placeholder="Enter car type" />
                    <span asp-validation-for="carType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="carBrand" class="form-label">Car Brand</label>
                    <input asp-for="carBrand" class="form-control" placeholder="Enter car brand" />
                    <span asp-validation-for="carBrand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="carColor" class="form-label">Car Color</label>
                    <input asp-for="carColor" class="form-control" placeholder="Enter car color" />
                    <span asp-validation-for="carColor" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Update Car</button>
                    <a href="@Url.Action("Index", "Car")" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
