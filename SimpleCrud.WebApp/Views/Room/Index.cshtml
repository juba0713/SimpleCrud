@{
    ViewData["Title"] = "Rooms";
}
@model RoomViewModel

<header>
    <link rel="stylesheet" href="~/css/room.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</header>

<body>
    <div>Rooms</div>
    <div><button data-toggle="modal" data-target="#createModal" class="btn btn-primary">Add Room</button></div>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Room ID</th>
                <th scope="col">Room Name</th>
                <th scope="col">Location</th>
                <th scope="col">Description</th>
                <th scope="col">Update Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Rooms.Any())
            {
                foreach (var room in Model.Rooms)
                {
                    <tr>
                        <td scope="row">@room.RoomId</td>
                        <td>@room.RoomName</td>
                        <td>@room.Location</td>
                        <td>@room.Description</td>
                        <td>@room.Updated_at</td>
                        <td>
                            <div class="button-group">
                                <button class="btn btn-primary edit-btn" data-room-id="@room.RoomId" data-toggle="modal" data-target="#editModal">Edit</button>

                                <form asp-controller="Room" asp-action="Delete" method="POST">
                                    <input type="hidden" name="RoomId" value="@room.RoomId" />
                                    <button class="delete-btn btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No rooms found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Room" asp-action="Create" method="POST">
                        <div>
                            <label>Room Name</label>
                            <input type="text" name="RoomName" required />
                        </div>
                        <div>
                            <label>Location</label>
                            <input type="text" name="Location" required />
                        </div>
                        <div>
                            <label>Description</label>
                            <textarea name="Description" required></textarea>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Room</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Room" asp-action="Edit" method="POST">
                        <div>
                            <label>Room ID</label>
                            <input type="text" name="RoomId" id="editRoomId" readonly />
                        </div>
                        <div>
                            <label>Room Name</label>
                            <input type="text" name="RoomName" id="editRoomName" required />
                        </div>
                        <div>
                            <label>Location</label>
                            <input type="text" name="Location" id="editLocation" required />
                        </div>
                        <div>
                            <label>Description</label>
                            <textarea name="Description" id="editDescription" required></textarea>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        $('.edit-btn').on('click', function () {
            var roomId = $(this).data('room-id');

            $.ajax({
                url: '/Room/GetRoomById', 
                type: 'GET',
                data: { roomId: roomId },
                success: function (response) {
                    $('#editRoomId').val(response.roomId);
                    $('#editRoomName').val(response.roomName);
                    $('#editLocation').val(response.location);
                    $('#editDescription').val(response.description);
                },
                error: function () {
                    alert('Failed to fetch room data.');
                }
            });
        });
    });
</script>

