
@{
    ViewData["Title"] = "Home Page";
}
@model StudentViewModel

<header>
    <link rel="stylesheet" href="~/css/student.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</header>
<body>
    <div>Students</div>
    <div><button data-toggle="modal" data-target="#createModal" class="btn btn-primary">Add Student</button></div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Student Id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Course</th>
                <th scope="col">Year</th>
                <th scope="col">Update Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Students.Any())
            {
                foreach (var student in Model.Students)
                {
                    <tr>
                        <td scope="row">@student.StudentId</td>
                        <td>@($"{student.FirstName} {student.MiddleName} {student.FamilyName}")</td>
                        <td>@student.Course</td>
                        <td>@student.Year</td>
                        <td>@student.UpdateDate</td>
                        <td>
                            <div class="button-group">
                                <button class="btn btn-primary edit-btn" data-student-id="@student.StudentId" data-toggle="modal" data-target="#editModal">Edit</button>

                                <form asp-controller="Student" asp-action="Delete" method="POST">
                                    <input type="hidden" name="StudentId" value="@student.StudentId" />
                                    <button class="delete-btn btn btn-primary btn-danger">Delete</button>
                                </form>
                            </div>
                           
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No students found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Student</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    
                </div>
                <div class="modal-body">
                    <form asp-controller="Student" asp-action="Create" method="POST">
                        <div>
                            <label>Student Id</label>
                            <input type="text" name="StudentId" />
                        </div>
                        <div>
                            <label>First Name</label>
                            <input type="text" name="FirstName" />
                        </div>
                        <div>
                            <label>Middle Name</label>
                            <input type="text" name="MiddleName" />
                        </div>
                        <div>
                            <label>Family Name</label>
                            <input type="text" name="FamilyName" />
                        </div>
                        <div>
                            <label>Course</label>
                            <select name="Course">
                                <option value="BScIT">Bachelor of Science in Information Technology</option>
                                <option value="BScCS">Bachelor of Science in Computer Science</option>
                                <option value="BCom">Bachelor of Commerce</option>
                                <option value="BBA">Bachelor of Business Administration</option>
                                <option value="BAEng">Bachelor of Arts in English</option>
                                <option value="BScBio">Bachelor of Science in Biology</option>
                                <option value="BEng">Bachelor of Engineering</option>
                                <option value="BArch">Bachelor of Architecture</option>
                                <option value="LLB">Bachelor of Laws (LLB)</option>
                            </select>
                        </div>
                        <div>
                            <label>Year</label>
                            <select name="Year">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Edit Student</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body">
                    <form asp-controller="Student" asp-action="Edit" method="POST">
                        <div>
                            <label>Student Id</label>
                            <input type="text" name="StudentId" id="editStudentId" readonly />
                        </div>
                        <div>
                            <label>First Name</label>
                            <input type="text" name="FirstName" id="editFirstName" />
                        </div>
                        <div>
                            <label>Middle Name</label>
                            <input type="text" name="MiddleName" id="editMiddleName" />
                        </div>
                        <div>
                            <label>Family Name</label>
                            <input type="text" name="FamilyName" id="editFamilyName" />
                        </div>
                        <div>
                            <label>Course</label>
                            <select name="Course" id="editCourse">
                                <option value="BScIT">Bachelor of Science in Information Technology</option>
                                <option value="BScCS">Bachelor of Science in Computer Science</option>
                                <option value="BCom">Bachelor of Commerce</option>
                                <option value="BBA">Bachelor of Business Administration</option>
                                <option value="BAEng">Bachelor of Arts in English</option>
                                <option value="BScBio">Bachelor of Science in Biology</option>
                                <option value="BEng">Bachelor of Engineering</option>
                                <option value="BArch">Bachelor of Architecture</option>
                                <option value="LLB">Bachelor of Laws (LLB)</option>
                            </select>
                        </div>
                        <div>
                            <label>Year</label>
                            <select name="Year" id="editYear">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('.edit-btn').on('click', function () {
            var studentId = $(this).data('student-id');

            $.ajax({
                url: '/Student/GetStudentById', // The URL should map to the action that returns student details
                type: 'GET',
                data: { studentId: studentId },
                success: function (response) {
                    // Populate the modal fields with the response data
                    $('#editStudentId').val(response.studentId);
                    $('#editFirstName').val(response.firstName);
                    $('#editMiddleName').val(response.middleName);
                    $('#editFamilyName').val(response.familyName);
                    $('#editCourse').val(response.course);
                    $('#editYear').val(response.year);
                },
                error: function () {
                    alert('Failed to fetch student data.');
                }
            });
        });
    });
</script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
