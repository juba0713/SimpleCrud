@model IEnumerable<SimpleCrud.Data.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a href="@Url.Action("AddUser", "User")" class="btn btn-primary">
            Add User
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Date Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.DateCreated.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("UpdateUser", "User", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteUser", "User", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this car?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
